@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.MainPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}
<html>
	<head>
		<style>
			body{
				direction: rtl;
				background-color: grey;
			}
			body form{
				direction: rtl;
				background-color: grey;
			}
			.header-div{
				margin-bottom: 2vw;
			}
			.form-group{
				margin: 1vw;
				font-size: 20px;
				font-weight: bold;
			}
			.payment-group{
				direction: rtl;
				width: 15%;
				justify-content: right;
				justify-items: right;
				justify-self: right;
			}
			.input-group{
				display: flex;
				flex-direction: column;
				margin: 2vw;
			}
			.form-div{
				font-size: 22px;
				margin: 2vw;
				color: #ffffff;
			}
			.submit-btn{
				    border: none;
					display: inline-block;
					width: 12vw;
					height: 3vw;
					background-color: #FB541F;
					border-radius: 1.5vw;
					border-color: #FB541F;
					text-align: center;
					font-size: 1.15vw;
					color: white;
					padding: 3px 20px 3px 20px;
					margin: 1vw;
					cursor: pointer;
			}
		</style>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
	</head>
	<body>
		<div class="header-div">
			<h1>טופס הפקת תשלום לדייר</h1>
		</div>
		<div>
		    @await Umbraco.RenderMacroAsync("PaymentForm")
		</div>
	</body>
</html>